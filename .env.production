# Production environment configuration for AWARE

# Server configuration
PORT=3000
NODE_ENV=production

# Node identification
NODE_ID=aware-node-${HOSTNAME:-1}

# Network configuration
DISCOVERY_PORT=41234
BROADCAST_PORT=41235
API_PORT=3000

# Secret key for JWT tokens (set this to a strong, random value in production)
SECRET_KEY=your_strong_production_secret_key_here

# List of other nodes in the cluster (comma-separated, optional for initial node)
# NODE_LIST=node2:3000,node3:3000

# API configuration
TOKEN_EXPIRY=24h

# Performance settings
HEARTBEAT_INTERVAL=30000
ELECTION_TIMEOUT=5000

# Logging
LOG_LEVEL=info